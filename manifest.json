{
  "manifest_version": 3,
  "name": "Optimizador SEO de Fichas (Woo + Rank Math)",
  "version": "1.0",
  "description": "Genera y pega autom√°ticamente contenido SEO optimizado para productos de WooCommerce usando la API de Gemini.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*/wp-admin/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/wp-admin/post.php*",
        "*://*/wp-admin/post-new.php*"
      ],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
